.owl-carousel
  position: relative
  margin 1em 0
  .owl-item
    p
      color: #ffffff
      background-color: #064b8d
      opacity: 0.77
      font-size: rem(34px)
      font-weight: 400
      display: inline-block
      padding 0 10px
      margin: 0
      line-height: 41px
      a
        color #32cd32
  .owl-controls
    .owl-buttons
      .owl-next
        opacity 1
        position: absolute
        right: -40px
        top: calc(50% - 24px)
        transform rotate(180deg)
        sprite($icon_arrow_prev)
      .owl-prev
        top: calc(50% - 24px)
        opacity 1
        position: absolute
        left: -40px
        sprite($icon_arrow_prev)
.main_slider
  max-width 700px
  width: auto
  margin 12em auto
.guestbook_carousel
  max-width 700px
  width: 100%
  margin 0 auto
  img
    width: 100px
    height: 100px
    margin-bottom: 1em
  .text
    margin-bottom: 1em
  .text, .text p
    color $color_text
    background: none
    font-weight: 400
    line-height: 27px
    font-size: rem(34px)
  .name, .city
    margin-top: 5px
    font-size: rem(22px)
.portfolio_slider
  margin 5em auto
  max-width 90%
  width: 100%
  .item
    position: relative
    padding: 1em
    .project_name
      margin 1em 0 0
    .btn_view
      display: inline-block
      visibility hidden
      position: absolute
      top: calc(50% - 20px)
      left: calc(50% - 55px)
      z-index 100
      width: 120px
    & .screen_box
      overflow hidden
      border-radius 2px
      position: relative
      &:after
        transition all 350ms cubic-bezier(0.395, 0.425, 0.015, 1) 0s
        content ""
        opacity 0
        position: absolute
        top: 0
        right: 0
        bottom: 0
        left: 0
        background-color: #000
      &:hover
        cursor: pointer
        .btn_view
          visibility visible
        &:after
          opacity: 0.3
.item
  display: inline-block
  height: auto
  width: 100%
  overflow: hidden
  img
    width: 100%
    height: auto
.portfolio_popup-carousel
  &.owl-carousel
    margin 0
    .item
      margin: 0
    .owl-controls .owl-buttons
      .owl-next
        right: 10px
      .owl-prev
        left: 10px
