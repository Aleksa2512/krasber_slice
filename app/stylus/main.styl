flex-version = flex
support-for-ie = true
vendor-prefixes = official
@import "nib"
@import "./node_modules/normalize.css/normalize.css"
@import "fonts"
@import "sprite"
@import "type-utils"
@import "./dist/vendor/owl.carousel.css"
@import "./dist/vendor/owl.theme.css"
@import "./dist/vendor/owl.transitions.css"
base-font-size = 18px // Change to adjust the conversion process
support-for-ie = false // Set to `false` for no `px` output with `rem`

$color_text = #131313

body, html
  height: 100%
body
  font-family: "CenturyGothicRegular"
a
  transition all 250ms cubic-bezier(0.395, 0.425, 0.015, 1) 0s
  outline none
  &:hover
    cursor: pointer
header
  background-image: url("../images/header_bg.jpg")
  background-repeat: no-repeat
  background-size: cover
  width: 100%
  height: auto
  text-align: center
  .container-fluid
    padding: 0
  .container_menu
    padding 0
    margin 1em 0
    background: rgba(47, 106, 154, 0.95)
    .logo
      display: inline-block
      width 89px
      height 49px
      margin 1em 0 0 0
    .header_contacts
      margin 1em 0
      p
        margin 0 0 5px
      a
        color #ffffff
        &:hover
          color: #32cd32
    .search__icon
      sprite($icon_search)
      display: inline-block
      vertical-align: middle
      margin-top: 1.2em
      &:hover
        cursor: pointer
.title
  color: $color_text
  margin 1em auto
  font-size: rem(28px)
  font-weight: 400
.delimiter
  max-width 594px
  margin 1em auto
  display: inline-block
  height 1px
  background: #d4d4d4
  width: 100%
.center
  text-align: center
.wrapper
  min-height: 64%
.content
  height: 100%
  p, ul, ol
    text-align: left
    width: 100%
    margin 10px auto
    color: $color_text
    font-size: rem(28px)
    font-weight: 400
    line-height: 24px
    letter-spacing 0.02em
.services_box
  margin-top: 2em
  text-align: center
  .services_box-item
    vertical-align: top
    width: 18%
    display: inline-block
    & + .services_box-item
      margin-left: 24px
    img
      border 4px solid #FFFFFF
      border-radius 50%
      width: 100%
      height: auto
      max-width 105px
      transition all 450ms cubic-bezier(0.395, 0.425, 0.015, 1) 0s
      &:hover
        border 4px solid #A2BBD3
        cursor: pointer
    .title_box
      height: 44px
      display: flex
      justify-content center
      align-items flex-end
      margin-bottom: 1em
      .title
        text-transform: uppercase
        color: $color_text
        font-size: rem(20px)
        font-weight: 400
        margin 0
    .desc
      min-height: 140px
      height: auto
    .desc, .desc p
      line-height: 20px;
      font-size rem(18px)
      text-align: center
      margin 0
.order_btn
  background-color: #32cd32
  display: inline-block
  padding: 6px
  margin 1em 0
  color: #fbfbfb
  font-size: rem(18px)
  font-weight: 400
  line-height: 16px
  &:hover
    text-decoration: none
    color #ffffff
    cursor: pointer
.stages_of-work
  text-align: center
  .stages_of-work-item
    width: 200px
    vertical-align: top
    display: inline-block
    & + .stages_of-work-item
      margin-left: 7em
    .title
      color: #000000
      font-size: rem(28px)
      font-weight: 400
      margin 1em 0
    .desc, .desc p
      font-size rem(20px)
.contacts_box
  position: fixed
  padding: 2px 5px
  transition: 1s
  right: 4px
  background: rgba(255, 255, 255, 0.5)
  top: 45%
  border-radius 4px
  list-style none
  border 1px solid #A2BBD3
  li
    text-align: center
    position: relative
    &:first-child
      p
        top: -2px
    p
      background: rgba(241,247,229,0.9)
      color $color_text
      border 1px solid #32CD32
      width: 160px
      left: -175px
      line-height 19px
      visibility hidden
      display: flex
      align-items center
      justify-content center
      top: 1px
      position: absolute
      border-top-left-radius 4px
      border-bottom-left-radius 4px
      height: 40px
      &:after
        content: ''
        position: absolute
        right: -20px
        bottom: 9px
        border: 10px solid transparent
        border-left: 10px solid #32CD32
    &:hover
      cursor: pointer
      > p
        visibility visible
      .icon_up
        sprite($icon_up_active)
      .icon_phone
        sprite($icon_call_answer_active)
      .icon_envelope
        sprite($icon_envelope_active)
    & + li
      border-top 1px solid #A2BBD3
      //margin-top: 2px
      padding-top: 2px
    .icon
      display: inline-block
    .icon_phone
      margin-top: 4px
      sprite($icon_call_answer)
    .icon_envelope
      sprite($icon_envelope)
    .icon_up
      sprite($icon_up)
.guestbook_box
  text-align: center
  background-color: #A2BBD3
  padding: 2em 0
  margin: 2em 0 0
.footer
  text-align: center
  background-color: #064b8d
  opacity: 0.77
  .row
    padding 1em 0 0 0
  .title
    text-transform: uppercase
    color #ffffff
  a
    display: inline-block
    color #ffffff
    font-size: rem(22px)
    font-weight: 400
    line-height: 28px
  p
    color: #ffffff
    font-size: rem(22px)
    font-weight: 400
  .copy
    color #ffffff
    margin-bottom: 1em
  ul.messengers
    margin 8px 0
    li
      display: inline-block
      & + li
        margin-left: 1em
      .icon
        display: inline-block
      .icon_telegram
        sprite($icon_telegram)
      .icon_whatsapp
        sprite($icon_whatsapp)
      .icon_skype
        sprite($icon_skype)
      .icon_viber
        sprite($icon_viber)
  ul
    padding: 0
    list-style none
    color #ffffff
    li
      font-size: rem(20px)
      font-weight: 400
      line-height: 22px
ul.socials
  margin 8px 0
  li
    display: inline-block
    &:hover
      cursor: pointer
      .icon_fb
        sprite($icon_fb_active)
      .icon_vk
        sprite($icon_vk_active)
      .icon_od
        sprite($icon_odnoklasniki_active)
      .icon_in
        sprite($icon_instagram_active)
    & + li
      margin-left: 5px
    .icon
      display: inline-block
    .icon_fb
      sprite($icon_fb)
    .icon_vk
      sprite($icon_vk)
    .icon_od
      sprite($icon_odnoklasniki)
    .icon_in
      sprite($icon_instagram)
.empty_mp
  margin: 0
  padding: 0
.green
  background-color: #32cd32
.socials_mobile
  .socials
    padding: 0
    display: block
    margin-bottom: 1em
    li
      display: block
      a
        color #ffffff
        text-transform: uppercase
      & + li
        margin-left: 0
        padding-top: 5px
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1) inset
.hide_overflow
  overflow hidden
#recall
  .body
    .form-group
      &.phone
        float: none
        width: 100%
button:-moz-focusring,
.fancybox-close-small[type="button"]:-moz-focusring, [type="reset"]:-moz-focusring, [type="submit"]:-moz-focusring
  outline: none
#portfolio_popup
  max-width: 50%
.order_btn-fixed
  z-index 999
  position: fixed
  width: 160px
  padding 5px
  text-align: center
  transition all 1s ease 0s
  right 8px
  top: 12%
  border-bottom-left-radius: 4px
  border-top-left-radius: 4px
  border 1px solid #32cd32
  background: rgba(241, 247, 229, 0.9) none repeat scroll 0 0
  .name
    padding-bottom: 5px
    border-bottom 1px dashed #32cd32
  .order_btn
    margin 0.5em 0
  &:after
    content: ''
    position: absolute
    right: -20px
    top: 40%
    border: 10px solid transparent
    border-left: 10px solid #32CD32
@import "./dist/vendor/jquery.fancybox.css"
@import "page"
@import "menu"
@import "hover"
@import "forms"
@import "breadcrumbs"
@import "carousel"
@import "blocks"
@import "media"