.products_box
  margin: 0
  padding: 0
  .plans_item
    margin 0 auto 1em auto
    max-width 475px
    display: inline-block
    text-align: center
    vertical-align: top
    & + .plans_item
      margin-left: 3em
    .title
      margin 1em 0 0
      padding: 16px
      background-color: #024c8d
      opacity: 0.77
      color: #fbfbfb
      font-weight: 400
      line-height: 24px
      height: 85px
      align-items: center
      justify-content center
      display: flex
      font-size: rem(28px)
      &.green
        background-color: #32cd32
    .desc
      background-color: #b6cadc
      padding 10px
      p
        text-align: center
        color #333
        font-size: rem(18px)
        font-weight: 400
        line-height: 20px
    .price
      background-color: #fbfbfb
      opacity: 0.77
      font-size: rem(24px)
      height: 45px
      align-items: center
      justify-content center
      display: flex
      span
        margin-left: 5px
        //font-size: rem(18px)
.portfolio_popup-desc
  margin-bottom: 3em
  padding 0 2em
  .portfolio_popup-desc-domain
    font-size: rem(34px)
    font-weight: 400
    color $color_text
    margin 1em 0
    line-height: 20px
  .portfolio_popup-desc-main
    text-align: left
    font-size: rem(22px)
    font-weight: 400
    line-height: 20px
  .portfolio_popup-desc-text
    font-size: rem(18px)
    font-weight: 400
    line-height: 20px
.sitemap
  text-align: left
  list-style none
  ul
    list-style none
    padding 0 0 0 1.2em
form .order_btn
  border none